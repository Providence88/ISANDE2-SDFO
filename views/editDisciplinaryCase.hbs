<!DOCTYPE html>
<html>
<head>
    <title>Edit Disciplinary Case</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="/images/anunalogo-final.png" alt="Logo">
            <h1>My S D F O</h1>
        </div>
        <div class="module-links">
            {{#each moduleLinks}}
                <a href="{{this.link}}" class="module-link">
                    <img src="/images/{{this.icon}}">
                    {{this.name}}
                </a>
            {{/each}}
        </div>
    </div>

    <div class="header">
        <div class="search__container">
            <input class="search__input" type="text" placeholder="Search">
        </div> 

       <a href="/profile" class="profile-link">
                <img src="/images/profiletemp.png" alt="Profile Picture">
                Profile
        </a>
    </div>

    <div class="main-body">

        <div class="main-body-header">
            <h3>Edit Disciplinary Case</h3>
            <p class="welcome-message">Here you can edit a disciplinary case</p>
        </div>

        <div class="form-container">
            <div class="form">
            <!-- Removed the url helper and replaced with direct URL -->
            <form id='discEdit' action="/disciplinary/editDisciplinaryCase/{{caseId}}" method="POST">
                <div class="form-group">
                    <label for="complainantId">Complainant ID</label>
                    <input type="text" id="complainantId" name="complainantId" value="{{complainantId}}" required>
                </div>
        
                <div class="form-group">
                    <label for="complainantName">Complainant Name</label>
                    <input type="text" id="complainantName" name="complainantName" value="{{complainantName}}" required>
                </div>
        
                <div class="form-group">
                    <label for="complainantEmail">Complainant Email</label>
                    <input type="email" id="complainantEmail" name="complainantEmail" value="{{complainantEmail}}" required>
                </div>
        
                <div class="form-group">
                    <label for="respondentId">Respondent ID</label>
                    <input type="text" id="respondentId" name="respondentId" value="{{respondentId}}" required>
                </div>
        
                <div class="form-group">
                    <label for="respondentName">Respondent Name</label>
                    <input type="text" id="respondentName" name="respondentName" value="{{respondentName}}" required>
                </div>
        
                <div class="form-group">
                    <label for="respondentEmail">Respondent Email</label>
                    <input type="email" id="respondentEmail" name="respondentEmail" value="{{respondentEmail}}" required>
                </div>
        
                <div class="form-group">
                    <label for="currentLevelOfEscalation">Current Level of Escalation</label>
                    <select id="currentLevelOfEscalation" name="currentLevelOfEscalation" required>
                        {{#each escalationLevels}}
                            <option value="{{this}}" {{#ifCond currentLevelOfEscalation this}}selected{{/ifCond}}>{{this}}</option>
                        {{/each}}
                    </select>
                </div>
        
                <div class="form-group">
                    <label for="confirmedBy">Confirmed By</label>
                    <input type="text" id="confirmedBy" name="confirmedBy" value="{{confirmedBy}}" required>
                </div>
        
                <div class="form-actions">

                    <a href="/main" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-submit">Save Changes</button>
                    
                </div>
            </form>
            <script src="/public/js/editDisciplinaryCase.js"></script>
            </div>
        </div>
    </div>

</body>
</html>
