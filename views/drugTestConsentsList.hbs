<!DOCTYPE html>
<html>
<head>
    <title>Drug Test Consents</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="/images/anunalogo-final.png" alt="Logo">
            <h1>M y S D F O</h1>
        </div>
        <div class="module-links">
            {{#each moduleLinks}}
                <a href="{{this.link}}" class="module-link">
                    <img src="/images/{{this.icon}}">
                    {{this.name}}
                </a>
            {{/each}}
        </div>
    </div>

    <div class="header">
        <div class="search__container">
            <input class="search__input" type="text" placeholder="Search">
        </div> 

        <a href="/profile" class="profile-link">
            <img src="/images/profiletemp.png" alt="Profile Picture">
            Profile
        </a>
    </div>

    <div class="main-body">
        <div class="main-body-header">
            <h3>Drug Test Consents</h3>
            <p class="welcome-message">View all drug test consents</p>
        </div>

        <div class="report-container">
            <a href="/drugTest/create" class="btn-actions">Create</a>

            <!-- Filter Form -->
            <div class="filters-container">
                <form action="/drugTest/list" method="get" class="filter-form-disc">
                    
                    <div class="filter-item">
                        <!-- ID Prefix Dropdown -->
                        <label for="idFilter">ID Prefix:</label>
                        <select name="idFilter" id="idFilter">
                            <option value="">Select ID </option>
                            <option value="117" {{#if (eq filter.idFilter "117")}}selected{{/if}}>117</option>
                            <option value="118" {{#if (eq filter.idFilter "118")}}selected{{/if}}>118</option>
                            <option value="119" {{#if (eq filter.idFilter "119")}}selected{{/if}}>119</option>
                            <option value="120" {{#if (eq filter.idFilter "120")}}selected{{/if}}>120</option>
                            <option value="121" {{#if (eq filter.idFilter "121")}}selected{{/if}}>121</option>
                            <option value="122" {{#if (eq filter.idFilter "122")}}selected{{/if}}>122</option>
                            <option value="123" {{#if (eq filter.idFilter "123")}}selected{{/if}}>123</option>
                            <option value="124" {{#if (eq filter.idFilter "124")}}selected{{/if}}>124</option>
                        </select>
                    </div>
            
                    <div class="filter-item">
                        <!-- Signature Dropdown -->
                        <label for="signature">Signature:</label>
                        <select name="signature">
                            <option value="">All</option>
                            <option value="yes" {{#if (eq filter.signature "yes")}}selected{{/if}}>Yes</option>
                            <option value="no" {{#if (eq filter.signature "no")}}selected{{/if}}>No</option>
                        </select>
                    </div>

                    <div class="filter-item">
                        <!-- Consent Dropdown -->
                        <label for="consent">Consent:</label>
                        <select name="consent">
                            <option value="">All</option>
                            <option value="yes" {{#if (eq filter.consent "yes")}}selected{{/if}}>Yes</option>
                            <option value="no" {{#if (eq filter.consent "no")}}selected{{/if}}>No</option>
                        </select>
                    </div>

                    <div class="filter-item">
                        <!-- Submitted Dropdown -->
                        <label for="submitted">Submitted:</label>
                        <select name="submitted">
                            <option value="">All</option>
                            <option value="yes" {{#if (eq filter.submitted "yes")}}selected{{/if}}>Yes</option>
                            <option value="no" {{#if (eq filter.submitted "no")}}selected{{/if}}>No</option>
                        </select>
                    </div>

                    <button type="submit" class="btn-actions-disc">Apply Filter</button>
                </form>
            </div>

            <table class="report-table">
                <thead>
                    <tr>
                        <th>ID Number</th>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Cellphone Number</th>
                        <th>School Email</th>
                        <th>Signature</th>
                        <th>Consent</th>
                        <th>Submitted</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                  {{#each entries}}
                    <tr>
                        <td>{{idNumber}}</td>
                        <td>{{lastName}}</td>
                        <td>{{firstName}}</td>
                        <td>{{cellphoneNumber}}</td>
                        <td>{{schoolEmail}}</td>
                        <td>{{signature}}</td>
                        <td>{{consent}}</td>
                        <td>{{submitted}}</td>
                        <td>
                            <a href="/drugTest/edit/{{this._id}}" class="btn-edit">Edit</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        
    </div>
</body>
</html>
