<!DOCTYPE html>
<html>
<head>
    <title>Non-Fraternity Contracts</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="/images/anunalogo-final.png" alt="Logo">
            <h1>My S D F O</h1>
        </div>
        <div class="module-links">
            {{#each moduleLinks}}
                <a href="{{this.link}}" class="module-link">
                    <img src="/images/{{this.icon}}">
                    {{this.name}}
                </a>
            {{/each}}
        </div>
    </div>

    <div class="header">
        <div class="search__container">
            <input class="search__input" type="text" placeholder="Search">
        </div> 

        <a href="/profile" class="profile-link">
            <img src="/images/profiletemp.png" alt="Profile Picture">
            Profile
        </a>
    </div>

    <div class="main-body">
        <div class="main-body-header">
            <h3>Non Fraternity Contracts</h3>
            <p class="welcome-message">View all non-fraternity contracts</p>
        </div>

        <div class="report-container">
             <!-- Create Button -->
            <a href="/nonFraternity/create" class="btn-actions">Create</a>

            <!-- Filter Form -->
            <div class="filters-container">
                <form action="/nonFraternity/list" method="get" class="filter-form-frat">

                    <div class="filter-item">
                        <label for="signature">Signature:</label>
                        <select name="signature" id="signature">
                            <option value="">All</option>
                            <option value="true" {{#if (eq filter.signature "true")}}selected{{/if}}>Yes</option>
                            <option value="false" {{#if (eq filter.signature "false")}}selected{{/if}}>No</option>
                        </select>
                    </div>

                    <div class="filter-item">
                        <label for="submitted">Submitted:</label>
                        <select name="submitted" id="submitted">
                            <option value="">All</option>
                            <option value="true" {{#if (eq filter.submitted "true")}}selected{{/if}}>Yes</option>
                            <option value="false" {{#if (eq filter.submitted "false")}}selected{{/if}}>No</option>
                        </select>
                    </div>

                    <button type="submit" class="btn-actions-frat">Apply Filter</button>
                </form>
            </div>

           
            <table class="report-table">
                <thead>
                    <tr>
                        <th>ID Number</th>
                        <th>Full Name</th>
                        <th>Cellphone Number</th>
                        <th>School Email</th>
                        <th>Signature</th>
                        <th>Submitted</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each contracts}}
                      <tr>
                        <td>{{idNumber}}</td>
                        <td>{{firstName}} {{middleInitial}}. {{lastName}}</td>
                        <td>{{cellphoneNumber}}</td>
                        <td>{{schoolEmail}}</td>
                        <td>{{#if signature}}Yes{{else}}No{{/if}}</td>
                        <td>{{#if submitted}}Yes{{else}}No{{/if}}</td>
                        <td>
                            <a href="/nonFraternity/edit/{{this._id}}" class="btn-edit">Edit</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
