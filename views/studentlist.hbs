<!DOCTYPE html>
<html>
<head>
    <title>Our Lasallians</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="/images/anunalogo-final.png" alt="Logo">
            <h1>M y S D F O</h1>
        </div>
        <div class="module-links">
            {{#each moduleLinks}}
                <a href="{{this.link}}" class="module-link">
                    <img src="/images/{{this.icon}}">
                    {{this.name}}
                </a>
            {{/each}}
        </div>
    </div>

    <div class="header">
        <div class="search__container">
            <input class="search__input" type="text" placeholder="Search">
        </div> 

        <div class="profile-link">
            <img src="/images/profiletemp.png" alt="Profile">
            Profile
        </div>
    </div>

    <div class="main-body">
        <div class="main-body-header">
            <h3>List of Students</h3>
            <p class="welcome-message">View currently enrolled students</p>
        </div>

        <div class="form-container">
            <div class="report-container">
               <div class="filters-container">
            <!-- Filter Form -->
            <form action="/disciplinary/list" method="get" class="filter-form-disc">
                <!-- Complainant ID Filter -->
                <div class="filter-item">
                    <label for="idFilterDisc">Complainant ID:</label>
                    <select name="idFilter" id="idFilter">
                        <option value="">Select ID </option>
                        <option value="117" {{#if (eq idFilter "117")}}selected{{/if}}>117</option>
                        <option value="118" {{#if (eq idFilter "118")}}selected{{/if}}>118</option>
                        <option value="119" {{#if (eq idFilter "119")}}selected{{/if}}>119</option>
                        <option value="120" {{#if (eq idFilter "120")}}selected{{/if}}>120</option>
                        <option value="121" {{#if (eq idFilter "121")}}selected{{/if}}>121</option>
                        <option value="122" {{#if (eq idFilter "122")}}selected{{/if}}>122</option>
                        <option value="123" {{#if (eq idFilter "123")}}selected{{/if}}>123</option>
                        <option value="124" {{#if (eq idFilter "124")}}selected{{/if}}>124</option>
                    </select>
                </div>

                <!-- Escalation Level Filter -->
                <div class="filter-item">
                    <label for="escalationFilterDisc">Level of Escalation:</label>
                    <select name="escalationFilter" id="escalationFilter">
                        <option value="">Select Level</option>
                        {{#each escalationLevels}}
                            <option value="{{this}}" {{#if (eq escalationFilter this)}}selected{{/if}}>{{this}}</option>
                        {{/each}}
                    </select>
                </div>

                <!-- College Filter -->
                <div class="filter-item">
                    <label for="collegeFilterDisc">College:</label>
                    <select name="collegeFilter" id="collegeFilter">
                        <option value="">Select College</option>
                        {{#each colleges}}
                            <option value="{{this}}" {{#if (eq collegeFilter this)}}selected{{/if}}>{{this}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn-actions-disc">Apply Filter</button>
            </form>
                </div>
                <table class="report-table">
                    <thead>
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>College</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each students}}
                        <tr>
                            <td>{{this.studentId}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.colleges}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>