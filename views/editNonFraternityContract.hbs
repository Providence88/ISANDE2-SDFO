<!DOCTYPE html>
<html>
<head>
    <title>Edit Non-Fraternity Contract</title>
    <link rel="stylesheet" href="/style.css" />
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="/images/anunalogo-final.png" alt="Logo">
            <h1>My S D F O</h1>
        </div>
         <div class="module-links">
            {{#each moduleLinks}}
                <a href="{{this.link}}" class="module-link">
                    <img src="/images/{{this.icon}}">
                    {{this.name}}
                </a>
            {{/each}}
        </div>
    </div>

    <div class="header">
        <div class="search__container">
            <input class="search__input" type="text" placeholder="Search">
        </div> 

        <a href="/profile" class="profile-link">
                <img src="/images/profiletemp.png" alt="Profile Picture">
                Profile
        </a>
    </div>

    <div class="main-body">
        <div class="main-body-header">
            <h3>Edit Non Fraternity Contract</h3>
            <p class="welcome-message">Here you can edit the details of a non-fraternity contract</p>
        </div>

        <div class="form-container">
            <div class="form">
                <form action="/nonFraternity/edit{{contract.id}}" method="POST">
                    <div class="form-group">
                        <label for="idNumber">ID Number</label>
                        <input type="text" id="idNumber" name="idNumber" value="{{contract.idNumber}}" required>
                    </div>
            
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" id="lastName" name="lastName" value="{{contract.lastName}}" required>
                    </div>
            
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" id="firstName" name="firstName" value="{{contract.firstName}}" required>
                    </div>
            
                    <div class="form-group">
                        <label for="middleInitial">Middle Initial</label>
                        <select id="middleInitial" name="middleInitial" required>
                            <option value="" disabled>Select</option>
                            {{#each middleInitials}}
                                <option value="{{this}}" {{#ifCond contract.middleInitial this}}selected{{/ifCond}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="college">College</label>
                        <select id="college" name="college" required>
                            <option value="" disabled>Select</option>
                            {{#each colleges}}
                                <option value="{{this.value}}" {{#ifCond contract.college this.value}}selected{{/ifCond}}>{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
            
                    <div class="form-group">
                        <label for="cellphoneNumber">Cellphone Number</label>
                        <input type="text" id="cellphoneNumber" name="cellphoneNumber" value="{{contract.cellphoneNumber}}" required>
                    </div>
            
                    <div class="form-group">
                        <label for="schoolEmail">School Email</label>
                        <input type="email" id="schoolEmail" name="schoolEmail" value="{{contract.schoolEmail}}" required>
                    </div>
            
                    <div class="form-group">
                        <label for="signature">Signature?</label>
                        <select id="signature" name="signature" required>
                            <option value="true" {{#if contract.signature}}selected{{/if}}>Yes</option>
                            <option value="false" {{#unless contract.signature}}selected{{/unless}}>No</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="submitted">Submitted?</label>
                        <select id="submitted" name="submitted" required>
                            <option value="true" {{#if contract.submitted}}selected{{/if}}>Yes</option>
                            <option value="false" {{#unless contract.submitted}}selected{{/unless}}>No</option>
                        </select>
                    </div>
            
                    <div class="form-actions">

                        <a href="/main" class="btn-cancel">Cancel</a>
                        <button type="submit" class="btn-submit">Save Changes</button>
                        
                    </div>
                </form>
                <script src="/public/js/editNonFraternityContract.js"></script>
            </div>
        </div>
    </div>
</body>
</html>
