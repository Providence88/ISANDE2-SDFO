<h1>Edit Non Fraternity Contract</h1>

<form action="/module/non-fraternity-contracts/edit/{{contract._id}}" method="POST">
    <label for="idNumber">ID Number:</label>
    <input type="text" id="idNumber" name="idNumber" value="{{contract.idNumber}}" required>

    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" value="{{contract.lastName}}" required>

    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" value="{{contract.firstName}}" required>

    <label for="middleInitial">Middle Initial:</label>
    <input type="text" id="middleInitial" name="middleInitial" value="{{contract.middleInitial}}" required>

    <label for="cellphoneNumber">Cellphone Number:</label>
    <input type="text" id="cellphoneNumber" name="cellphoneNumber" value="{{contract.cellphoneNumber}}" required>

    <label for="schoolEmail">School Email:</label>
    <input type="email" id="schoolEmail" name="schoolEmail" value="{{contract.schoolEmail}}" required>

    <label for="signature">Signature:</label>
    <select id="signature" name="signature" required>
        <option value="true" {{#if (eq contract.signature true)}}selected{{/if}}>Yes</option>
        <option value="false" {{#if (eq contract.signature false)}}selected{{/if}}>No</option>
    </select>

    <label for="consent">Consent:</label>
    <select id="consent" name="consent" required>
        <option value="true" {{#if (eq contract.consent true)}}selected{{/if}}>Yes</option>
        <option value="false" {{#if (eq contract.consent false)}}selected{{/if}}>No</option>
    </select>

    <label for="submitted">Submitted:</label>
    <select id="submitted" name="submitted" required>
        <option value="true" {{#if (eq contract.submitted true)}}selected{{/if}}>Yes</option>
        <option value="false" {{#if (eq contract.submitted false)}}selected{{/if}}>No</option>
    </select>

    <button type="submit">Update Contract</button>
    <a href="/module/non-fraternity-contracts" class="btn">Cancel</a>
</form>
