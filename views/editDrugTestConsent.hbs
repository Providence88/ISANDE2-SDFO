<h1>Edit Drug Test Consent Form</h1>

<form action="/module/drug-test-consents/edit/{{consent._id}}" method="POST">
    <label for="idNumber">ID Number:</label>
    <input type="text" id="idNumber" name="idNumber" value="{{consent.idNumber}}" required>

    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" value="{{consent.lastName}}" required>

    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" value="{{consent.firstName}}" required>

    <label for="middleInitial">Middle Initial:</label>
    <input type="text" id="middleInitial" name="middleInitial" value="{{consent.middleInitial}}" required>

    <label for="cellphoneNumber">Cellphone Number:</label>
    <input type="text" id="cellphoneNumber" name="cellphoneNumber" value="{{consent.cellphoneNumber}}" required>

    <label for="schoolEmail">School Email:</label>
    <input type="email" id="schoolEmail" name="schoolEmail" value="{{consent.schoolEmail}}" required>

    <label for="signature">Signature:</label>
    <select id="signature" name="signature" required>
        <option value="true" {{#if (eq consent.signature true)}}selected{{/if}}>Yes</option>
        <option value="false" {{#if (eq consent.signature false)}}selected{{/if}}>No</option>
    </select>

    <label for="consent">Consent:</label>
    <select id="consent" name="consent" required>
        <option value="true" {{#if (eq consent.consent true)}}selected{{/if}}>Yes</option>
        <option value="false" {{#if (eq consent.consent false)}}selected{{/if}}>No</option>
    </select>

    <label for="submitted">Submitted:</label>
    <select id="submitted" name="submitted" required>
        <option value="true" {{#if (eq consent.submitted true)}}selected{{/if}}>Yes</option>
        <option value="false" {{#if (eq consent.submitted false)}}selected{{/if}}>No</option>
    </select>

    <button type="submit">Update Consent</button>
    <a href="/module/drug-test-consents" class="btn">Cancel</a>
</form>
